<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bghome"
    tools:context=".ui.gallery.GalleryFragment" >

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Pemilihan Kondisi"
        android:textColor="#040404"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="430dp"
        android:layout_height="802dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        tools:ignore="SpeakableTextPresentCheck">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/baris1kondisi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Jenis-jenis kondisi: "
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/baris2kondisi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="30dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="                  -Pilihan Tunggal"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/baris3kondisi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="50dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="                  -Pilihan Ganda"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/baris4kondisi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="75dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="                  -Pilihan Majemuk"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/baris5kondisi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="100dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="                  -Struktur Case"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/baris6kondisi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="130dp"
                android:layout_marginRight="25dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="1. Pilihan Tunggal"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/paragraf1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="155dp"
                android:layout_marginRight="25dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:justificationMode="inter_word"
                android:text="    Bentuk Paling sederhana pilihan tunggal adalah jika hanya ada satu pilihan kondisi yang disediakan. Bentuk umum:"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="260dp"
                android:layout_height="180dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="240dp"
                android:src="@drawable/pilihtunggal"
                android:layout_marginRight="25dp"/>

            <TextView
                android:id="@+id/paragraf2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="425dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:justificationMode="inter_word"
                android:layout_marginRight="25dp"
                android:text="  Contoh permasalahan: Menentukan huruf vokal dari satu huruf yang dimasukkan dari keyboard."
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/kode2"
                android:layout_width="300dp"
                android:layout_height="170dp"
                android:layout_below="@id/paragraf2"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/vokal"
                android:layout_marginRight="25dp"/>

            <TextView
                android:id="@+id/pilihanganda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kode2"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="2. Pilihan Ganda"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/paragraf3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pilihanganda"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:justificationMode="inter_word"
                android:text="  Digunakan untuk menentukan tindakan yang akan digunakan yang akan digunakan bila kondisi bernilai benar dan salah. Bentuk umum:  ."
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/kode3"
                android:layout_width="300dp"
                android:layout_height="170dp"
                android:layout_below="@id/paragraf3"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="25dp"
                android:src="@drawable/pilgan" />

            <TextView
                android:id="@+id/paragraf4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kode3"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:justificationMode="inter_word"
                android:text="  Contoh Permasalahan: Menentukan bilangan terbesar dari dua buah bilangan."
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/kode4"
                android:layout_width="300dp"
                android:layout_height="170dp"
                android:layout_below="@id/paragraf4"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="25dp"
                android:src="@drawable/pilgan2" />

            <TextView
                android:id="@+id/pilihanmajemuk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kode4"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="3. Pilihan Majemuk"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/paragraf5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pilihanmajemuk"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:justificationMode="inter_word"
                android:text="  Untuk menentukan tindak yang akan digunakan disediakan lebih dari dua alternatif. Merupkan bentuk statement if dengan statement if lain di dalam if sebelumnya . Bentuk umum: "
                android:textColor="@color/black"
                android:textSize="20sp" />
            <ImageView
                android:id="@+id/kode5"
                android:layout_width="300dp"
                android:layout_height="170dp"
                android:layout_below="@id/paragraf4"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="25dp"
                android:src="@drawable/pilmajemuk" />





        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>